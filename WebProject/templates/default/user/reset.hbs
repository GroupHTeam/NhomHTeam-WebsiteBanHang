<div class="row">
    <div class="col-md-4 col-md-offset-4">
        {{#if error}}{{#each error}}
         <div class="alert alert-danger">{{msg}}</div>
        {{/each}}
        {{/if}}
        <h3 class="page-header">THAY ĐỔI MẬT KHẨU</h3>
        <form method="post">          
            <div class="form-group">
                <label class="form-label">Mật khẩu mới</label>
                <input type="password" class="form-control" name="matkhau" placeholder="Mật Khẩu mới">
            </div>
            <div class="form-group">
                <label class="form-label">Nhập lại mật khẩu</label>
                <input type="password" class="form-control" name="matkhau2" placeholder="Nhập lại mật khẩu">
            </div>
            <div>
                <input type="hidden" name="_csrf" value="{{csrfToken}}"> 
                <button type="submit" class="btn btn-button">Gửi</button>
            </div>
            
        </form>
    </div>
</div>