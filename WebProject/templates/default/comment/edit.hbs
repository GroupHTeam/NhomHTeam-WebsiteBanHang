<div class="container">
    {{#each sanpham_id}}
    <div class="row">
        {{#each comment}}
        <h1 style="text-align: center">Chỉnh sửa bình luận</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/chitietsanpham/{{sanpham_id._id}}/comments/{{comment._id}}?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="{{comment.text}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/chitietsanpham">trở về</a>
        </div>
        {{/each}}
    </div>
    {{/each}}
</div>