<div class="row">
    <div class="col-md-4 col-md-offset-4">
      {{#if errors}} {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
        {{/each}} {{/if}}
        {{#if err}}
        <div class="alert alert-danger">{{err}}</div>
        {{/if}}
        <h3 class="page-header">THAY ĐỔI MẬT KHẨU</h3>
        <form method="post">   
            <div class="form-group">
                <label class="form-label">Mật khẩu hiện tại</label>
                <input type="password" class="form-control" name="matkhau" placeholder="Nhập mật khẩu">
            </div>       
            <div class="form-group">
                <label class="form-label">Mật khẩu mới</label>
                <input type="password" class="form-control" name="matkhau1" placeholder="Mật Khẩu mới">
            </div>
            <div class="form-group">
                <label class="form-label">Nhập lại mật khẩu</label>
                <input type="password" class="form-control" name="matkhau2" placeholder="Nhập lại mật khẩu">
            </div>
            <div  style="float: left">
                <button type="submit" class="btn btn-button">Thay Đổi</button>
            </div>
             <div  style="float: right">
               <a href="/"> <button type="button" class="btn btn-button">Hủy</button></a>
            </div>
        </form>
    </div>
</div>