<!-- START CONTENT -->
<section id="main-content" class=" ">

<div class="alert alert-danger"></div>

<section class="wrapper main-wrapper row" style=''>
<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Add Sản Phẩm</h1>
        </div>
        <div class="pull-right hidden-xs">
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="col-xs-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Thông Tin</h2>
            <div class="actions panel_actions pull-right">
                <a class="box_toggle fa fa-chevron-down"></a>
                <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                <a class="box_close fa fa-times"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                {{#if dataProduct}}
                    <div class="alert alert-danger">Mã sản phẩm đã tồn tại </div>
                {{/if}}

                {{#if success_msg}}
                <div class="alert alert-success">{{success_msg}}</div>
                {{else}}
                    {{#if errors}} {{#each errors}}
                    <div class="alert alert-danger">{{msg}}
                    </div>
                     {{/each}} {{/if}}

                <form action="/admin/product/them-san-pham.html/submit" method="post" enctype="multipart/form-data" >
                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                        <div class="form-group">
                            <label class="form-label" for="field-120334">Mã Sản Phẩm</label>
                            <span class="desc"></span>
                            <div class="controls">
                                <input type="text" id="maSanPham" value="" class="form-control" name="maSanPham">
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                        <div class="form-group">
                            <label class="form-label" for="field-120334">Name</label>
                            <span class="desc"></span>
                            <div class="controls">
                                <input type="text" id="name" value="" class="form-control" name="name">
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                        <div class="form-group">
                            <label class="form-label" for="field-120334">Hình</label>
                            <span class="desc"></span>
                            <div class="controls">
                                <input type="file" id="hinh" value="" required="required" class="form-control" name="hinh">
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                        <div class="form-group">
                            <label class="form-label" for="field-120334">Giá</label>
                            <span class="desc"></span>
                            <div class="controls">
                                <input type="number" id="gia" value="0" min="0" class="form-control" name="gia">
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                        <div class="form-group">
                            <label class="form-label" for="field-120334">Thể Loại</label>
                            <span class="desc"></span>
                            <div class="controls">
                                <select class="form-control" id="maLoai" name="maLoai">
                                    <option value=""></option>
                                    {{#each cates}} {{#each this}}
                                    <option id="maLoai" value="{{this.ma}}">{{this.ma}}</option>
                                    {{/each}} {{/each}}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                        <div class="form-group">
                            <label class="form-label" for="field-120334">Chi Tiết Sản Phẩm</label>
                            <span class="desc"></span>
                            <div class="controls">
                                <textarea name="des" id="des" class="form-control autogrow" cols="5"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                        <div class="text-left">
                            <!-- <input type="hidden" name="_csrf" value="{{csrfToken}}">   -->
                            <button  action="/admin/product/them-san-pham.html/submit" type="submit" class="btn btn-primary">Save</button>
                            <button type="cancel" class="btn">Cancel</button>
                        </div>
                    </div>
                </form>
                {{/if}}
            </div>
        </div>
    </section>
</div>
</section>
</section>
<!-- END CONTENT -->
