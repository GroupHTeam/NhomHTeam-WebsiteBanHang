        {{# each this }}
        <div class="col-xs-12 col-sm-6 col-md-3">
          <div class="thumbnail">
            <a href="./chitietsanpham/{{this._id}}">
            <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
            </a>
            <div class="caption">
              <h3>{{ this.tenSanPham }}</h3>
              <p class="description">{{ this.description }}</p>
              <div class="clearfix">
                <div class="price pull-left">${{ this.gia }}</div>
              </div>
          </div>
        </div>
       </div>
    {{/each}}
  </div>
