<!-- START CONTENT -->
<section id="main-content" class=" ">
    <section class="wrapper main-wrapper row" style=''>
        <div class='col-xs-12'>
            <div class="page-title">
                <div class="pull-left">
                    <h1 class="title">THÔNG TIN ĐẶT HÀNG</h1>
                </div>
                <div class="pull-right hidden-xs">
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-lg-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">Thông tin chi tiết</h2>
                    <div class="actions panel_actions pull-right">
                        <a class="box_toggle fa fa-chevron-down"></a>
                        <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                        <a class="box_close fa fa-times"></a>
                    </div>
                </header>
                <div class="content-body">
                    <div class="row">
                        <div class="alert alert-success"></div>
                        <div class="row" style="padding-left: 50px;">
                            <h2>Thông tin tài khoản</h2> {{#each orders}}
                            <div>
                                <p><strong>Tên: </strong> {{this.name}} </p>
                            </div>
                            <div>
                                <p><strong>Số điện thoại: </strong> {{this.phone}}</p>
                            </div>
                            <!-- <div>
                               <p><strong>Tài khoản: </strong> {{this.taiKhoan.email}}</p>
                           </div> -->
                            <div>
                                <p><strong>Địa chỉ: </strong>{{this.address}}</p>
                            </div>
                            <!-- <div>
                               <p><strong>Giỏ hàng </strong>{{this.cart}}</p>
                           </div> -->
                            <!-- <div>
                               <p><strong>Tổng tiền: </strong>{{this.cart.totalPrice}}</p>
                           </div> -->
                           <!-- {{/each}} -->
                        </div>
                        <div class="col-xs-12">
                            <!-- ********************************************** -->
                            <h2>Thông tin chi tiết sản phẩm</h2>
                           <!--  {{#each orders}} -->
                            <table id="example" class="display table table-hover table-condensed">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Số Lượng</th>
                                        <th>Tổng Tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                  {{#each this.items}}
                                    <tr>
                                        <td>{{this.item.tenSanPham}}</td>
                                        <td>{{this.qty}}</td>
                                        <td>{{this.gia}}</td>
                                    </tr>
                                    {{/each}}
                                    <tr>
                                        <td colspan="5">
                                            {{#if " this.status == 1 "}}
                                            <a href="/admin/cart/{{this.ID}}/chitietgiohang.html/thanhtoan">{{this.status}} - Chưa giao </a>
                                            {{else}}
                                            <span>Đã giao</span>
                                            {{/if}} 
                                            <span>/</span>
                                            <a href="/admin/cart/{{this.ID}}/xoa-cart.html">Xoá</a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="5">
                                            <p><strong style="color:red">Tồng Tiền: </strong> {{this.cart.totalPrice}}đ</p>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            {{/each}}
                            <!-- ********************************************** -->
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>
</section>
<!-- END CONTENT -->
