<div class="row">
    <div class="col-md-4">
    </div>
    <div class="row">
    <div class="col-md-8">
        {{#if message}}
        <div class="alert alert-success">{{message}}</div>
        {{/if}}
        {{#if customers}} 
        <h3 class="page-header">THÔNG TIN TÀI KHOẢN</h3>
        <form method="post">
            <div class="col-md-7">
                {{#each customers}}
                <div class="form-group">
                    <label class="form-label" for="field-120334">Tên khách hàng</label>
                    <span class="desc"></span>
                    <input type="text" value="{{this.tenKhachHang}}" class="form-control" id="ten" name="ten">
                </div>
                <div class="form-group">
                    <label class="form-label" for="field-120334">Số điện thoại</label>
                    <span class="desc"></span>
                    <input type="tel" value="{{this.soDienThoai}}" class="form-control" id="SDT" name="SDT">
                </div>
                <div class="form-group">
                    <label class="form-label" for="field-120334">Địa chỉ</label>
                    <span class="desc"></span>
                    <input type="text" value="{{this.diaChi}}" class="form-control" id="diachi" name="diachi">
                </div>
                <div class="form-group">
                    <label class="form-label" for="field-120334">Email</label>
                    <span class="desc"></span>
                    <input type="text" value="{{this.email}}" class="form-control" id="mail" name="mail" disabled>
                </div>
                 <div class="row">
                    <div class="form-group col-md-6" style="float: left">
                        <label class="form-label" for="field-120334">Ngày sinh</label>
                        <span class="desc"></span>
                        <input type="text" value="{{this.ngaySinh}}" class="form-control" id="ngaysinh" name="ngaysinh">
                    </div>
                    <div class="form-group col-md-6 " style="float: right">
                        <label class="form-label" for="field-120334">Giới tính</label>
                        <span class="desc"></span>
                        <input type="text" value="{{this.gioiTinh}}" class="form-control" id="gioitinh" name="gioitinh">
                    </div>
                </div>
                <div style="float: left">
                    <button type="submit" class="btn btn-primary">Lưu Thay Đổi</button>
                </div>
                <div  style="float: right">
                    <a href="/user/doimatkhau/{{this._id}}"><button type="button" class="btn btn-default">Đổi Mật Khẩu</button>      
                </div>
                <div  style="float: right">
                    <button type="reset" class="btn btn-default">Hủy</button>      
                </div>  
                 {{/each}}      
            </div>
        </form>
        {{/if}}
    </div>
</div>
    </div>
</div>