 <section id="main-content" class=" ">
<section class="wrapper main-wrapper row" style=''>
    <div class='col-xs-12'>
        <div class="page-title">
            <div class="pull-left">
                <h1 class="title">Thông tin tài khoản</h1>
            </div>
            <div class="pull-right hidden-xs">
                
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
   <div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Thông tin tài khoản</h2>
            <div class="actions panel_actions pull-right">
                <a class="box_toggle fa fa-chevron-down"></a>
                <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                <a class="box_close fa fa-times"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <form action="/customer/{{this.email}}/infoaccout.html">
                    {{#each customers}}
                        
                    <div class = "col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                        <label class="form-label" for="field-120334">Tên khách hàng</label>
                        <span class="desc"></span>
                        <input type="text" id="maSanPham" value="{{this.tenKhachHang}}" class="form-control" name="maSanPham">
                    </div>
                    
                    <div class = "col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                        <label class="form-label" for="field-120334">Email</label>
                        <span class="desc"></span>
                        <input type="text" id="maSanPham" value="{{this.email}}" class="form-control" name="maSanPham">
                    </div>

                    <div class = "col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                        <label class="form-label" for="field-120334">Ngày sinh</label>
                        <span class="desc"></span>
                        <input type="text" id="maSanPham" value="{{this.ngaySinh}}" class="form-control" name="maSanPham">
                    </div>
                    

                    <div class = "col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                        <label class="form-label" for="field-120334">Giới tính</label>
                        <span class="desc"></span>
                        <input type="text" id="maSanPham" value="{{this.gioiTinh}}" class="form-control" name="maSanPham">
                    </div>

                    <div class = "col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                        <label class="form-label" for="field-120334">Số điện thoại</label>
                        <span class="desc"></span>
                        <input type="text" id="maSanPham" value="{{this.soDienThoai}}" class="form-control" name="maSanPham">
                    </div>

                    <div class = "col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                        <label class="form-label" for="field-120334">Địa chỉ</label>
                        <span class="desc"></span>
                        <input type="text" id="maSanPham" value="{{this.diaChi}}" class="form-control" name="maSanPham">
                    </div>

                    <div class = "clearfix  float:left"> <button><a href="/customer/{{this.email}}/xoa-customer.html">Xoá</a> </button>  </div>
                    
                    {{/each}}
                </form>
            </div>
        </div>

   </div>
    </section>
</section>